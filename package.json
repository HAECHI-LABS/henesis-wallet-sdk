{
  "name": "henesis-wallet-sdk",
  "scripts": {
    "lerna:bootstrap": "lerna run preBootstrap && lerna bootstrap --hoist --no-ci",
    "bootstrap": "rm -rf ./**./node_modules && npm install && npm run lerna:bootstrap && npm run build",
    "publish:patch": "lerna version patch && lerna publish from-git",
    "publish:prerelease": "lerna version prerelease && lerna publish from-git",
    "build": "lerna run build",
    "test": "lerna run test"
  },
  "devDependencies": {
    "lerna": "^3.16.4"
  },
  "author": "Haechi labs Team",
  "license": "LGPL3",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.(integration|spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "dependencies": {
    "axios": "^0.19.2"
  }
}
